{
  "name": "fastify-typescript-starter",
  "version": "0.1.0",
  "description": "Fastify TypeScript starter repository",
  "scripts": {
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "local": "cross-env NODE_ENV=development nodemon",
    "dev": "concurrently 'npm run watch' 'npm run local'",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js"
  },
  "author": "Wahyufadz <wahyufadz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.2.0",
    "fastify": "^3.7.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.10",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}