{
  "name": "fastify-typescript-template",
  "version": "0.1.0",
  "description": "Fastify TypeScript template repository",
  "scripts": {
    "dev": "nodemon --watch './src/**/*.ts' --exec ts-node ./src/index.ts",
    "dev2": "ts-node-dev ./src",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "rm -rf dist && tsc",
    "setup": "cp template.env .env & cp template.ormconfig.json ormconfig.json & $npm_execpath install",
    "start": "node dist/src/index.js",
    "typeorm": "node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js"
  },
  "author": "Wahyufadz <wahyufadz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dayjs": "^1.9.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "fastify": "^3.7.0",
    "fastify-auth": "^1.0.1",
    "fastify-cors": "^4.1.0",
    "fastify-formbody": "^5.0.0",
    "fastify-oas": "^3.0.3",
    "fastify-sensible": "^3.0.1",
    "fastify-typeorm-plugin": "^2.1.3",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "point-of-view": "^4.7.0",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/ejs": "^3.0.5",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.11.10",
    "eslint": "^7.12.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  }
}
